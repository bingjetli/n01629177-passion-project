<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title | Jusqu'a</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
    <div class="container">
      @Html.ActionLink("Jusqu'a", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
          <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
          <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
          <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
          <li>@Html.ActionLink("Shopping List", "ShoppingList", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
        @Html.Partial("_LoginPartial")
      </div>
    </div>
  </nav>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year Bailey Liang. All Rights Reserved.</p>
    </footer>
  </div>
  <div id="toast-box" class="position-fixed bottom-0 end-0 p-3">

  </div>


  <script>
    //Global JavaScript helper functions
    function htmlElementFromString(html_string) {
      return new DOMParser().parseFromString(html_string, "text/html").body.firstChild;
    }


    //Returns null if the input array is empty or deleting an element will
    //result in an empty array. Otherwise returns a new array with the element
    //at the specified index missing.
    function deleteElementFromArrayByIndex(array, index) {
      if (array.length <= 1) {
        return null;
      }

      const new_array = [];
      for (let i = 0; i < array.length; i++) {
        if (i !== index) {
          new_array.push(array[i]);
        }
      }


      return new_array;
    }
  </script>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
