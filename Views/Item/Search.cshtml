@model IEnumerable<n01629177_passion_project.Models.ItemSerializable>

@{
  ViewBag.Title = "Search Results | Jusqu'a";
}


<h1 class="mb-5">Item Search Results</h1>

<div class="row">
  <div class="col-sm-8">
    <div class="list-group">

      @if (Model.Count() > 0) {

        foreach (var i in Model) {

          <a class="list-group-item list-group-item-action py-4" href="/Item/Details?itemId=@i.ItemId">
            <div class="text-uppercase fs-6 text-muted">@i.Brand</div>
            <div class="text-capitalize fs-5">@i.Name - @i.Variant </div>
          </a>

        }

      }
      else {
        <div class="fs-1 text-secondary">No items matching that search term.</div>
      }


    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-sm-8">
    <small class="text-secondary">Unable to find what you're looking for?</small>
    <div class="mt-2 d-flex">
      <a class="btn btn-primary me-2" href="/Item/CreateInput">Create a new item</a>
      <a class="btn btn-secondary" href="/">Go back to the homepage</a>
    </div>
  </div>
</div>
