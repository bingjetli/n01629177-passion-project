@model IEnumerable<n01629177_passion_project.Models.ItemSerializable>

@{
  ViewBag.Title = "Search Results | Jusqu'a";
}


<h1 class="mt-5">Item Search Results</h1>

<div class="row mt-5">
  <div class="col-sm-8">
    <div class="list-group">

      @if (Model.Count() > 0) {

        foreach (var i in Model) {

          <a class="list-group-item list-group-item-action py-4" href="/Item/Details?itemId=@i.ItemId">
            <div class="d-flex justify-content-between">
              <small class="text-uppercase text-muted fw-bold">@i.Brand</small>
              <small class="text-uppercase text-muted">#@i.ItemId</small>
            </div>
            <div class="text-capitalize fs-6">@i.Name - @i.Variant </div>
          </a>

        }

      }
      else {
        <div class="fs-1 fw-bold text-muted text-center">No items matching that search term!</div>
      }


    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-sm-8">
    <small class="text-secondary">Can't find what you're looking for?</small>
    <div class="mt-2 d-flex">
      <a class="btn btn-primary me-2" href="/Item/CreateInput">Create a new item</a>
      <a class="btn btn-secondary" href="/">Go back to the homepage</a>
    </div>
  </div>
</div>
