@model IEnumerable<n01629177_passion_project.Models.PriceSerializable>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-5">Prices</h1>

<div class="row">
  <div class="col-sm-8">
    <div class="list-group mb-5">

      @if (Model.Count() > 0) {

        foreach (var p in Model) {

          <a class="list-group-item list-group-item-action py-4" href="/Price/ModifiableDetails?priceId=@p.PriceId">
            <div class="d-flex justify-content-between">
              <small class="text-uppercase text-muted">#@p.PriceId</small>
              <small class="text-uppercase text-muted">@p.CreationDate</small>
            </div>
            <div class="text-capitalize fs-1 text-success fw-bold">$@p.Value</div>
            <div class="d-flex justify-content-between">
              <small class="text-muted">Shop Id: @p.ShopId</small>
              <small class="text-muted">Item Id: @p.ItemId</small>
            </div>
          </a>

        }

      }
      else {
        <div class="fs-1 text-secondary">There are no items in the database</div>
      }


    </div>
  </div>
</div>

